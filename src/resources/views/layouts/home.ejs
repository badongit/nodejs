
<div class="mt-4">
    <div class="row">
        <% for(let i = 0; i < books.length ; i++) { %>
            <div class="col-sm-6 col-lg-4">
                <div class="card card-book">
                    <a href="/books/<%= books[i].slug %>">
                        <img class="card-img-top" src="<%= books[i].image %>" alt="Card image cap">
                    </a>
                    <div class="card-body">
                        <a href="/books/<%= books[i].slug %>"> <h5 class="card-title"><%= books[i].name %></h5></a>
                        <p class="card-text"><%= books[i].description %></p>
                        <p class="card-text"> <kbd><%= formatter.format(books[i].price) %></kbd></p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>